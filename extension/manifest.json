{
  "manifest_version": 3,
  "name": "T&C Summarizer & Cookie Helper",
  "version": "1.0",
  "description": "Summarize Terms, Privacy Policies and detect Cookie consents using Gemini AI.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Summarize Legal Info"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}
